{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022"],
    "baseUrl": ".",
    "paths": {
      "@good-indexer/metrics": ["packages/metrics/src/index.ts"],
      "@good-indexer/ingest": ["packages/ingest/src/index.ts"],
      "@good-indexer/dispatch": ["packages/dispatch/src/index.ts"],
      "@good-indexer/executor-evm": ["packages/executor-evm/src/index.ts"],
      "@good-indexer/storage-postgres": ["packages/storage-postgres/src/index.ts"],
      "@good-indexer/examples-erc20-transfers": ["examples/erc20-transfers/src/index.ts"],
      "@good-indexer/adapters-evm": ["packages/adapters-evm/src/index.ts"]
    },
    "types": ["node", "vitest/globals"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "useDefineForClassFields": false
  }
}
