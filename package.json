{
  "name": "good-indexer",
  "version": "1.0.0",
  "description": "Polling-only EVM indexer with exactly-once effects via Inbox/Outbox",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/glenneggleton/good-indexer.git"
  },
  "homepage": "https://github.com/glenneggleton/good-indexer#readme",
  "bugs": {
    "url": "https://github.com/glenneggleton/good-indexer/issues"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@9.12.3",
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r run dev",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck",
    "test": "vitest --run",
    "test:watch": "vitest",
    "coverage": "vitest --run --coverage",
    "docs": "typedoc",
    "docs:serve": "npx serve docs/api",
    "prepare": "echo 'ok'"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@types/inversify": "^2.0.33",
    "@types/node": "^20.14.12",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.10.0",
    "fixturez": "^1.1.0",
    "recheck": "^4.5.0",
    "tsup": "^8.3.0",
    "tsx": "^4.19.0",
    "typedoc": "^0.28.12",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "^5.6.2",
    "vitest": "^2.1.9"
  },
  "dependencies": {
    "inversify": "^7.9.1",
    "reflect-metadata": "^0.2.2"
  }
}
